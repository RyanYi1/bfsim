<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <!--TextView titles for add unit activity-->
    <style name="AddUnitTitleTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>

    </style>

    <!--Add Unit Radio Button style for add unit activity-->
    <style name="AddUnitButtonTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#2E2E2E</item>
    </style>

    <!--EditText style for add unit activity-->
    <style name="EditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#2E2E2E</item>
        <item name="android:textSize">15dp</item>
    </style>

</resources>
